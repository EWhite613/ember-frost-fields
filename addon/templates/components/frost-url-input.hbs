{{frost-text
  autofocus=autofocus
  disabled=disabled
  insert-newline=onEnter
  onFocusIn=onFocus
  onFocusOut=onBlur
  onInput=(action 'input')
  placeholder=placeholder
  readonly=readonly
  tabindex=tabindex
  type=type
  value=value
}}

{{frost-button
  id='test'
  onClick=(action 'test' value)
  priority='primary'
  size='small'
  text='Test'
}}

<div class="urlIcon">

  {{#if urlFormatError}}
    {{frost-icon
    icon='warning'
    }}
      <div class="urlText">URL Format Error</div>
  {{/if}}

  {{#if isLoading}}
    {{frost-icon
    icon='loading/ring'
    }}
  {{/if}}

  {{#if error}}
    {{frost-icon
    icon='notifications/error'
    }}
      <div class="urlText">Error</div>
  {{/if}}
  {{#if undetermined}}
    {{frost-icon
    icon='notifications/warning'
    }}
      <div class="urlText">Undetermined</div>
  {{/if}}
  {{#if success}}
    {{frost-icon
    icon='notifications/info'
    }}
      <div class="urlText">Success</div>
  {{/if}}

</div>
